{
  "name": "parser",
  "sourceRoot": "libs/parser/src",
  "projectType": "library",
  "targets": {
    "build": {
      "executor": "@monodon/rust:build",
      "outputs": ["{projectRoot}/target"],
      "options": {
        "toolchain": "stable",
        "package": "hallwatch-parser"
      }
    },
    "test": {
      "executor": "@monodon/rust:test",
      "options": {
        "toolchain": "stable",
        "package": "hallwatch-parser"
      }
    },
    "integration-test": {
      "executor": "@monodon/rust:test",
      "options": {
        "toolchain": "stable",
        "package": "hallwatch-parser",
        "testBinary": "integration_tests"
      }
    },
    "test:javascript": {
      "executor": "@monodon/rust:test",
      "options": {
        "toolchain": "stable", 
        "package": "hallwatch-parser",
        "testFilter": "javascript"
      }
    },
    "test:python": {
      "executor": "@monodon/rust:test",
      "options": {
        "toolchain": "stable",
        "package": "hallwatch-parser", 
        "testFilter": "python"
      }
    },
    "test:php": {
      "executor": "@monodon/rust:test",
      "options": {
        "toolchain": "stable",
        "package": "hallwatch-parser",
        "testFilter": "php"
      }
    },
    "benchmark": {
      "executor": "nx:run-commands",
      "options": {
        "command": "cargo bench --package hallwatch-parser",
        "cwd": "{workspaceRoot}"
      }
    },
    "clippy": {
      "executor": "@monodon/rust:clippy",
      "options": {
        "toolchain": "stable",
        "package": "hallwatch-parser",
        "fix": false
      }
    }
  },
  "tags": ["scope:backend", "type:lib", "lang:rust"]
}
